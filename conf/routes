# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# An example controller showing a sample home page
GET     /dummy                   controllers.MyFirstController.index

GET    /dummy/method             controllers.MyFirstController.controllerMethodWithParameter(name: String)

GET    /dummy/action             controllers.MyFirstController.myAction

GET     /dummy/sayHello          controllers.MyFirstController.sayHello

GET     /api/homeController                                             controllers.MyFirstController.redirect
GET     /api/EmbeddedTweetsResourcesSparkController                     controllers.EmbeddedTweetsResourcesSparkController.index
GET     /api/EmbeddedTweetsResourcesSparkController/count               controllers.EmbeddedTweetsResourcesSparkController.countTweets
GET     /api/EmbeddedTweetsResourcesSparkController/list                controllers.EmbeddedTweetsResourcesSparkController.listTweets
GET     /api/EmbeddedTweetsResourcesSparkController/filter/:text controllers.EmbeddedTweetsResourcesSparkController.filterByTweetsText(text)

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

