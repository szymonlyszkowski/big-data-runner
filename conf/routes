# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# An example controller showing a sample home page
GET     /dummy                   controllers.MyFirstController.index

GET    /dummy/method             controllers.MyFirstController.controllerMethodWithParameter(name: String)

GET    /dummy/action             controllers.MyFirstController.myAction

GET     /dummy/sayHello          controllers.MyFirstController.sayHello

GET     /api/spark/homeController                                             controllers.MyFirstController.redirect
GET     /api/spark/embedded                     controllers.EmbeddedTweetsResourcesSparkController.index
GET     /api/spark/embedded/count               controllers.EmbeddedTweetsResourcesSparkController.countTweets
GET     /api/spark/embedded/list                controllers.EmbeddedTweetsResourcesSparkController.listTweets
GET     /api/spark/embedded/filter/:text        controllers.EmbeddedTweetsResourcesSparkController.filterByTweetsText(text)

GET     /api/spark/live/list                    controllers.LiveTweetResourcesSparkController.listSampleTweets
GET     /api/spark/live/list/stop               controllers.LiveTweetResourcesSparkController.stopStreaming

GET     /api/hadoop/wordcount                   controllers.HadoopController.wordCount

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

