# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# An example controller showing a sample home page
GET     /dummy                      controllers.MyFirstController.index

GET    /dummy/method             controllers.MyFirstController.controllerMethodWithParameter(name: String)

GET    /dummy/action             controllers.MyFirstController.myAction

GET     /dummy/sayHello          controllers.MyFirstController.sayHello

GET     /api/v2/homeController   controllers.MyFirstController.redirect
GET     /api/v2/helloController  controllers.HelloController.index
GET     /api/v2/helloController/count               controllers.HelloController.count
GET     /api/v2/helloController/list                controllers.HelloController.list
GET     /api/v2/helloController/filter/:text controllers.HelloController.filter(text)

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

